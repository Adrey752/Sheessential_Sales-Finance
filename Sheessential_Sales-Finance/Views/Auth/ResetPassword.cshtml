@model string
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update Password | Sheessentials</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="min-h-screen flex items-center justify-center bg-gradient-to-br from-pink-200 via-pink-100 to-white">

    <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8 space-y-6">

        <!-- Logo -->
        <div class="flex justify-center">
            <img src="~/images/Logo.png" class="h-48 object-contain drop-shadow-lg" alt="Sheessentials Logo" />
        </div>

        <!-- Title -->
        <h2 class="text-center text-2xl font-semibold text-gray-700">
            Create New Password
        </h2>

        <form method="post" class="space-y-4">

            <!-- Token (hidden) -->
            <input type="hidden" name="token" value="@Model" />

            <!-- Password Field -->
            <div>
                <label class="block text-gray-600 font-medium">New Password</label>
                <input type="password"
                       name="newPassword"
                       required
                       class="w-full mt-1 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-400 focus:border-pink-400" />
            </div>

            <button type="submit"
                    class="w-full bg-pink-500 hover:bg-pink-600 text-white py-2 rounded-lg font-semibold transition">
                Update Password
            </button>

            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <p class="text-red-600 text-sm font-medium text-center">@ViewBag.Error</p>
            }

            @if (!string.IsNullOrEmpty(ViewBag.Success))
            {
                <p class="text-green-600 text-sm font-medium text-center">@ViewBag.Success</p>
            }
        </form>

        <div class="text-center">
            <a href="/Account/Login" class="text-sm text-pink-600 hover:underline">
                Back to Login
            </a>
        </div>

    </div>

</body>
</html>
