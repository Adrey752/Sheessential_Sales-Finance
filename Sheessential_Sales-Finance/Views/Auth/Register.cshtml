@model Sheessential_Sales_Finance.Models.User

@{
    ViewBag.Title = "Register";
    Layout = "";
}

<h2>Register</h2>

<form method="post">
    <div>
        <label>First Name</label>
        <input name= "FirstName" required />
    </div>
    <div>
        <label>Last Name</label>
        <input name ="LastName" required />
    </div>
    <div>
        <label>Email</label>
        <input name ="Email" type="email" required />
    </div>
    <div>
        <label>Password</label>
        <input name="Password" type="password" required />
    </div>
    <div>
        <label>Phone</label>
        <input name ="Phone" required />
    </div>

    <h4>Address</h4>
    <div>
        <label>Street</label>
        <input name="Address.Street" required />
    </div>
    <div>
        <label>City</label>
        <input name="Address.City" required />
    </div>
    <div>
        <label>Province</label>
        <input name="Address.Province" required />
    </div>
    <div>
        <label>Postal Code</label>
        <input name="Address.PostalCode" required />
    </div>
    <div>
        <label>Country</label>
        <input name="Address.Country" required />
    </div>

    <button type="submit">Register</button>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}
@if (ViewBag.Success != null)
{
    <p style="color:green">@ViewBag.Success</p>
}

@if (!string.IsNullOrEmpty(ViewBag.Success))
{
    <script>
        const alertMsg = "Alerto";
        const alertType = ViewBag.Success;
        alert(`${alertType.toUpperCase()}: ${alertMsg}`);
    </script>
}
