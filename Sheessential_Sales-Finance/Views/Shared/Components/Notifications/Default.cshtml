@model List<Sheessential_Sales_Finance.Models.ActionLog>

<div id="notifDropdown"
     class="absolute top-9 right-[-10px] w-96 bg-white shadow-xl rounded-xl p-2 border hidden transition-all duration-300
            max-h-[70vh] overflow-y-auto">

    @if (Model.Count == 0)
    {
        <div class="text-center py-6 text-gray-400">
            No notifications yet.
        </div>
    }
    else
    {
        @foreach (var notif in Model)
        {
            string url = notif.Entity switch
            {
                "Invoice" => "/Sales_Finance/Invoices",
                "Products" => $"/Sales_Finance/Products",
                "Expenses" => $"/Sales_Finance/Expenses",
                _ => "/" // fallback if no match
            };

            <a href="@url"
               class="flex items-center gap-3 px-3 py-3 hover:bg-gray-50 rounded-lg cursor-pointer transition">

                <div class="w-12 h-12 rounded-full bg-pink-100 flex items-center justify-center text-pink-600 text-lg">
                    <i class="fa-solid fa-bell"></i>
                </div>

                <div class="flex flex-col">
                    <span class="font-semibold text-gray-800">@notif.Action</span>
                    <span class="text-sm text-gray-500">@notif.Description</span>
                    <span class="text-xs text-gray-400">@notif.TimeStamp.ToLocalTime().ToString("MMM dd, hh:mm tt")</span>
                </div>
            </a>
        }
    }
</div>
