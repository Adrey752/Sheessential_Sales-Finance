<!DOCTYPE html>
<html lang="en">
<head>
    <title>Employee Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    // Custom Colors from your CSS
                    colors: {
                        'primary': '#A36A66',
                        'primary-dark': '#8B5A54',
                        'secondary': '#FFA593',
                        'text-dark': '#2c3e50',
                        'text-muted': '#6c757d',
                        'border-light': '#e0e0e0', // Used for border-color
                        'success': '#27ae60',
                        'warning': '#f39c12',
                        'danger': '#e74c3c',
                        'info': '#3498db',
                        'sidebar-bg': '#FFFBFD', // Background color used for body/sidebar/header
                        'sidebar-hover': '#e9e9e9', // Background for nav links on hover
                        'bg-main': '#FFFBFD', // Main body background
                        'nav-label': '#a7a7a7', // Nav section label color
                        'logout-cancel-border': '#e0e0e0',
                        'logout-cancel-hover-bg': '#f8f9fa',
                    },
                    // Custom values (25px is not a standard Tailwind spacing unit)
                    spacing: {
                        '25px': '25px', // For nav-link/nav-section-label margin-left/right
                        '1.09rem': '1.09rem', // For sidebar-header padding
                    },
                    // Custom utility for transitions
                    transitionProperty: {
                        'all': 'all',
                    },
                }
            }
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">


    @RenderSection("Head", required: false)

    <style>
        /* Global CSS reset, font, and background */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            /* Tailwind equivalent: bg-bg-main overflow-x-hidden */
        }
            /* Hide scrollbar for all browsers (requires specific vendor prefixes in a style block) */
            html::-webkit-scrollbar, body::-webkit-scrollbar, .main-content::-webkit-scrollbar, .sidebar::-webkit-scrollbar, *::-webkit-scrollbar {
                display: none;
                width: 0;
                height: 0;
            }

        html, body, .main-content, .sidebar, * {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }
    </style>
</head>

<body class="bg-bg-main overflow-x-hidden">

    <div class="flex min-h-screen">

        <aside id="sidebar" class="bg-bg-main min-h-screen fixed top-0 left-0 z-[1000] transition-all duration-300 border-r border-gray-300 w-60 lg:w-[230px]">

            <div class="h-[70px] flex items-center bg-white border-b border-gray-300 px-[1.09rem]">
                <div class="flex items-center justify-center">
                    <img src="~/images/sheesential-logo.jpg" alt="Yeloe Logo" class="max-w-[140px]" />
                </div>
            </div>

            <nav class="py-6">
                <div class="mb-8">
                    <div class="text-nav-label text-xs font-semibold uppercase tracking-wider px-6 mb-3 ml-25px">Menu</div>

                    <ul class="p-0 m-0 list-none">
                        <li class="mb-1">
                            <a asp-controller="Sales_Finance" asp-action="DashBoard" class="nav-link flex items-center py-3 px-6 text-primary no-underline font-medium text-sm ml-25px hover:bg-sidebar-hover hover:text-primary hover:rounded-xl hover:mr-25px active:bg-sidebar-hover active:text-primary active:rounded-xl active:mr-25px">
                                <i class="fas fa-chart-line mr-4 text-lg w-5 text-center"></i>
                                <span class="nav-text">Dashboard</span>
                            </a>
                        </li>

                        <li class="mb-1">
                            <a asp-controller="Sales_Finance" asp-action="Invoices" class="nav-link flex items-center py-3 px-6 text-primary no-underline font-medium text-sm ml-25px hover:bg-sidebar-hover hover:text-primary hover:rounded-xl hover:mr-25px">
                                <i class="fas fa-credit-card mr-4 text-lg w-5 text-center"></i>
                                <span class="nav-text">Payments</span>
                            </a>
                        </li>
                        <li class="mb-1">
                            <a asp-controller="Sales_Finance" asp-action="Products" class="nav-link flex items-center py-3 px-6 text-primary no-underline font-medium text-sm ml-25px hover:bg-sidebar-hover hover:text-primary hover:rounded-xl hover:mr-25px">
                                <i class="fas fa-shopping-cart mr-4 text-lg w-5 text-center"></i>
                                <span class="nav-text">Sales</span>
                            </a>
                        </li>
                        <li class="mb-1">
                            <a asp-controller="Sales_Finance" asp-action="Expenses" class="nav-link flex items-center py-3 px-6 text-primary no-underline font-medium text-sm ml-25px hover:bg-sidebar-hover hover:text-primary hover:rounded-xl hover:mr-25px">
                                <i class="fas fa-file-invoice-dollar mr-4 text-lg w-5 text-center"></i>
                                <span class="nav-text">Expenses</span>
                            </a>
                        </li>

                    </ul>
                </div>

            </nav>
        </aside>

        <div class="flex-1 min-h-screen bg-bg-main ml-60 lg:ml-[230px]">

            <header class="h-[70px] bg-bg-main flex justify-between items-center sticky top-0 z-50 border-b border-gray-300 px-8">

                <div class="flex items-center gap-6">
                </div>

                <div class="flex items-center gap-4">
                    <div class="flex items-center gap-4">

                        @{
                            var fullName = Context.Session.GetString("UserName") ?? "User";
                            var email = Context.Session.GetString("Email") ?? "user@example.com";

                            var initials = string.Join("", fullName
                            .Split(' ', StringSplitOptions.RemoveEmptyEntries)
                            .Select(n => n[0]))
                            .ToUpper();
                        }

                        <div class="flex items-center gap-4">
                            <i onclick="toggleNotifications()"
                               class="fa-regular fa-bell text-gray-500 hover:text-primary cursor-pointer transition text-xl"></i>

                            <div class="flex items-center gap-3">

                                <div class="w-8 h-8 flex items-center justify-center rounded-full bg-primary text-white text-xs font-semibold">
                                    @initials
                                </div>

                                <div class="flex flex-col leading-tight">
                                    <span class="font-medium text-[#A36A66]">@fullName</span>
                                    <span class="text-gray-400 text-sm">Finance Staff</span>
                                </div>

                                <i class="fa-solid fa-chevron-down text-gray-400 text-sm cursor-pointer"></i>
                            </div>

                        </div>

                        <div class="relative">
                            @await Component.InvokeAsync("Notifications")
                        </div>


                    </div>
                </div>
            </header>

            <div class="fixed inset-0 z-[1055] bg-gray-900/50 flex items-center justify-center p-4 hidden" id="logoutModal">

                <div class="relative w-full max-w-md mx-auto">

                    <div class="rounded-2xl border-none shadow-xl shadow-gray-500/20 bg-white">

                        <div class="border-none p-4 pb-0 text-right">
                            <button id="closeLogoutModal" class="p-2 text-gray-400 hover:text-gray-600">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>

                        <div class="p-8 text-center">
                            <div class="w-[70px] h-[70px] mx-auto mb-6 bg-gradient-to-br from-primary to-secondary rounded-full flex items-center justify-center text-2xl text-white">
                                <i class="fas fa-sign-out-alt"></i>
                            </div>

                            <h5 class="text-2xl font-semibold text-text-dark mb-2">Sign Out</h5>

                            <p class="text-text-muted mb-8">Are you sure you want to sign out?</p>

                            <div class="flex gap-4 justify-center">
                                <button type="button" id="cancelLogoutModal" class="btn py-3 px-8 border-2 border-logout-cancel-border bg-white text-text-dark rounded-full font-medium transition-all duration-300 hover:bg-logout-cancel-hover-bg hover:border-text-muted">
                                    Cancel
                                </button>

                                <button type="button" class="btn py-3 px-8 bg-gradient-to-br from-primary to-secondary text-white border-none rounded-full font-medium transition-all duration-300 hover:opacity-90 hover:translate-y-[-2px] hover:shadow-lg hover:shadow-primary/30" id="confirmLogoutBtn">
                                    <span class="btn-text">Sign Out</span>
                                    <span class="btn-loading" style="display:none;">
                                        <i class="fas fa-spinner fa-spin"></i>
                                    </span>
                                </button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <main>
                @RenderBody()
            </main>

        </div>
    </div>

    <script src="~/custom-js/mainsidebar.js"></script>
    <script>
        function toggleNotifications() {
            const dropdown = document.getElementById("notifDropdown");
            dropdown.classList.toggle("hidden");
        }

        // ✅ Close dropdown when clicking outside
        document.addEventListener("click", function (event) {
            const dropdown = document.getElementById("notifDropdown");
            const bellIcon = document.querySelector(".fa-regular.fa-bell"); // Your bell icon selector

            if (dropdown && bellIcon && !dropdown.contains(event.target) && !bellIcon.contains(event.target)) {
                dropdown.classList.add("hidden"); // force close
            }
        });
    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>