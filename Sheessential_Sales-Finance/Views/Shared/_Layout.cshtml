@*
    _Layout.cshtml - Sidebar layout similar to your image
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sheessentials Sales & Finance</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #fafafa;
            margin: 0;
            display: flex;
        }

        /* Sidebar */
        .sidebar {
            width: 230px;
            background-color: #fff;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            box-shadow: 2px 0 8px rgba(0,0,0,0.05);
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px 10px;
        }

        .logo {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 40px;
        }

            .logo img {
                width: 200px;
                height: 140px;
                margin-bottom: 8px;
            }

            .logo h4 {
                font-weight: 600;
                color: #E98BA9;
            }

        .nav-links {
            width: 100%;
            list-style: none;
            padding: 0;
        }

            .nav-links li {
                width: 100%;
                margin: 8px 0;
            }

            .nav-links a {
                text-decoration: none;
                color: #555;
                font-weight: 500;
                display: flex;
                align-items: center;
                padding: 10px 20px;
                border-radius: 10px;
                transition: background 0.3s, color 0.3s;
            }

                .nav-links a:hover,
                .nav-links a.active {
                    background-color: #FFE5EC;
                    color: #E98BA9;
                }

            .nav-links i {
                width: 25px;
                text-align: center;
                margin-right: 10px;
            }

        /* Main content area */
        .main-content {
            margin-left: 230px;
            padding: 30px;
            width: calc(100% - 230px);
        }

            .main-content h2 {
                font-weight: 600;
                color: #333;
                margin-bottom: 25px;
            }

        footer {
            text-align: center;
            padding: 20px;
            color: #aaa;
            font-size: 0.9rem;
        }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="logo">
            <img src="~/images/logo.png" alt="Logo" />
            <h4>Sheessentials</h4>
        </div>

        <ul class="nav-links">
            <li><a asp-controller="Dashboard" asp-action="Index" class="active"><i class="fa-solid fa-house"></i>Dashboard</a></li>
            <li><a asp-controller="Products" asp-action="Index"><i class="fa-solid fa-box"></i>Products</a></li>
            <li><a asp-controller="Banking" asp-action="Index"><i class="fa-solid fa-building-columns"></i>Banking</a></li>

            <li>
                <a data-bs-toggle="collapse" href="#salesMenu" role="button" aria-expanded="false" aria-controls="salesMenu">
                    <i class="fa-solid fa-receipt"></i>Sales <i class="fa-solid fa-chevron-down ms-auto"></i>
                </a>
                <ul class="collapse ms-4 mt-2" id="salesMenu">
                    <li><a asp-controller="Sales" asp-action="Records">Records</a></li>
                    <li><a asp-controller="Sales" asp-action="Reports">Reports</a></li>
                </ul>
            </li>

            <li>
                <a data-bs-toggle="collapse" href="#purchasesMenu" role="button" aria-expanded="false" aria-controls="purchasesMenu">
                    <i class="fa-solid fa-cart-shopping"></i>Purchases <i class="fa-solid fa-chevron-down ms-auto"></i>
                </a>
                <ul class="collapse ms-4 mt-2" id="purchasesMenu">
                    <li><a asp-controller="Purchases" asp-action="Records">Records</a></li>
                    <li><a asp-controller="Purchases" asp-action="Reports">Reports</a></li>
                </ul>
            </li>

            <li><a asp-controller="Reports" asp-action="Index"><i class="fa-solid fa-chart-line"></i>Reports</a></li>
        </ul>
    </div>

    <!-- Main content -->
    <div class="main-content">
        <main role="main">
            @RenderBody()
        </main>

        <footer class="border-top mt-5">
            <p>&copy; 2025 - Sheessentials Sales & Finance</p>
        </footer>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
