<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sheessentials Sales & Finance</title>
    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>

<body class="bg-[#fafafa] font-[Poppins] flex min-h-screen">

    <!-- Sidebar -->
    <aside class="w-64 bg-white shadow-lg fixed top-0 left-0 h-screen flex flex-col items-center p-5 border-r-4 border-gray-100">
        <div class="w-full flex flex-col items-center">
            <img src="~/images/logo.png" alt="Logo" class="w-60 mb-3" />
        </div>

        <ul class="w-full mt-5 space-y-2">
            <!-- Dashboard -->
            <li>
                <a asp-controller="Sales_Finance" asp-action="DashBoard"
                   class="flex items-center px-5 py-3 rounded-xl hover:bg-pink-50 hover:text-pink-500 text-gray-600 font-medium transition active:bg-pink-100">
                    <i class="fa-solid fa-house w-6 mr-2"></i>Dashboard
                </a>
            </li>

            <!-- Products -->
            <li>
                <a asp-controller="Sales_Finance" asp-action="Products"
                   class="flex items-center px-5 py-3 rounded-xl hover:bg-pink-50 hover:text-pink-500 text-gray-600 font-medium transition">
                    <i class="fa-solid fa-box w-6 mr-2"></i>Products
                </a>
            </li>

            <!-- Sales (Dropdown) -->
            <li class="relative">
                <button onclick="toggleDropdown('salesDropdown', this)"
                        class="w-full flex items-center justify-between px-5 py-3 rounded-xl hover:bg-pink-50 text-gray-600 font-medium transition">
                    <span class="flex items-center"><i class="fa-solid fa-hand-holding-dollar w-6 mr-2"></i>Sales</span>
                    <i class="fa-solid fa-chevron-down text-sm transition-transform duration-300"></i>
                </button>
                <ul id="salesDropdown"
                    class="max-h-0 overflow-hidden transition-all duration-300 ease-in-out pl-10 space-y-1">
                    <li>
                        <a asp-controller="Sales_Finance" asp-action="Invoices"
                           class="block px-3 py-2 rounded-lg text-gray-600 hover:bg-pink-50 hover:text-pink-500 transition text-sm">
                            <i class="fa-solid fa-wallet w-4 mr-2"></i>Invoices
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Sales_Finance" asp-action="Customers"
                           class="block px-3 py-2 rounded-lg text-gray-600 hover:bg-pink-50 hover:text-pink-500 transition text-sm">
                            <i class="fa-solid fa-user-group w-4 mr-2"></i>Customers
                        </a>
                    </li>
                </ul>
            </li>

            <!-- Purchases (Dropdown) -->
            <li class="relative">
                <button onclick="toggleDropdown('purchasesDropdown', this)"
                        class="w-full flex items-center justify-between px-5 py-3 rounded-xl hover:bg-pink-50 text-gray-600 font-medium transition">
                    <span class="flex items-center"><i class="fa-solid fa-cart-shopping w-6 mr-2"></i>Purchases</span>
                    <i class="fa-solid fa-chevron-down text-sm transition-transform duration-300"></i>
                </button>
                <ul id="purchasesDropdown"
                    class="max-h-0 overflow-hidden transition-all duration-300 ease-in-out pl-10 space-y-1">
                    <li>
                        <a asp-controller="Sales_Finance" asp-action="Invoices"
                           class="block px-3 py-2 rounded-lg text-gray-600 hover:bg-pink-50 hover:text-pink-500 transition text-sm">
                            <i class="fa-solid fa-money-bill-wave w-4 mr-2"></i>Expenses
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Purchases" asp-action="Vendors"
                           class="block px-3 py-2 rounded-lg text-gray-600 hover:bg-pink-50 hover:text-pink-500 transition text-sm">
                            <i class="fa-solid fa-truck-field w-4 mr-2"></i>Vendors
                        </a>
                    </li>
                </ul>
            </li>

            <!-- Reports -->
            <li>
                <a asp-controller="Sales_Finance" asp-action="Reports"
                   class="flex items-center px-5 py-3 rounded-xl hover:bg-pink-50 hover:text-pink-500 text-gray-600 font-medium transition">
                    <i class="fa-solid fa-chart-line w-6 mr-2"></i>Reports
                </a>
            </li>
        </ul>
    </aside>

    <!-- Main Content -->
    <div class="ml-64 flex flex-col w-[calc(100%-16rem)] min-h-screen">

        <!-- Topbar -->
        <header class="bg-[#ffffff] flex justify-between items-center px-10 py-4 sticky top-0 z-10">
            <h1 class="text-2xl font-semibold text-gray-800">@ViewData["Title"]</h1>

            <div class="flex items-center gap-5">
                <!-- Search Bar -->
                <div class="relative">
                    <input type="text" placeholder="Search..."
                           class="pl-10 pr-4 py-2.5 w-80 rounded-2xl bg-gray-50 focus:bg-white focus:ring-2 focus:ring-pink-300 outline-none shadow-md text-gray-600 text-sm transition duration-300 ease-in-out" />
                    <i class="fa-solid fa-magnifying-glass absolute left-3 top-3 text-gray-400"></i>
                </div>

                <!-- Icons -->
                <i class="fa-regular fa-envelope text-gray-500 hover:text-pink-500 cursor-pointer transition"></i>

                @{
                    var fullName = Context.Session.GetString("UserName") ?? "User";
                    var email = Context.Session.GetString("Email") ?? "user@example.com";

                    // Generate initials (first letter of each name)
                    var initials = string.Join("", fullName
                    .Split(' ', StringSplitOptions.RemoveEmptyEntries)
                    .Select(n => n[0]))
                    .ToUpper();
                }

                <div class="flex items-center space-x-3">
                    <!-- Circle with initials -->
                    <div class="w-12 h-12 flex items-center justify-center rounded-full bg-white text-pink-500 font-semibold border-2 border-pink-400 shadow-sm">
                        @initials
                    </div>

                    <!-- Name + email -->
                    <div class="flex flex-col leading-tight">
                        <span class="text-gray-800 font-medium">@fullName</span>
                        <span class="text-gray-500 text-sm">@email</span>
                    </div>
                </div>


            </div>
        </header>

        <!-- Page Content -->
        <main class="flex-grow bg-[#ffffff] p-4">
            @RenderBody()
        </main>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/site.js"></script>


</body>
</html>
