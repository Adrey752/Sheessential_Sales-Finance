@{
    ViewData["Title"] = "Connection Error";
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- ✅ Local Bootstrap (no CDN needed) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        body {
            background-color: #fff8fa;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        }

        .error-card {
            max-width: 500px;
            padding: 2rem;
            border-radius: 1rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
            text-align: center;
        }

        .error-icon {
            font-size: 3rem;
            color: #dc3545;
        }

        .btn-retry {
            background-color: #e83e8c;
            border: none;
        }

        .btn-retry:hover {
            background-color: #d63384;
        }
    </style>
</head>
<body>
    <div class="error-card">
        <div class="error-icon mb-3">
            <i class="bi bi-wifi-off"></i> <!-- optional if Bootstrap Icons are available -->
        </div>
        <h1 class="fw-bold text-danger mb-3">Connection Error</h1>
        <p class="text-secondary mb-4">@ViewBag.Message</p>
        <a href="/Sales_Finance/Index" class="btn btn-retry text-white px-4 py-2 rounded-pill">Retry</a>
    </div>

    <!-- ✅ Local Bootstrap JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
