@{
    ViewData["Title"] = "Finance Report";
}

<div class="px-6 py-4">
    <!-- Page Header -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-xl font-semibold">Reports</h1>
            <p class="text-sm text-gray-500">Finance Report</p>
        </div>

        <!-- Right side dropdown + button -->
        <div class="flex gap-3">
            <select class="border border-gray-300 rounded-lg px-3 py-1 text-sm cursor-pointer">
                <option selected>Weekly</option>
                <option>Monthly</option>
            </select>

            <button class="bg-green-500 hover:bg-green-600 text-white text-sm px-4 py-2 rounded-lg">
                Generate Report
            </button>
        </div>
    </div>

    <!-- Top Summary Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-6 mb-8">

        <!-- Total Income -->
        <div class="bg-white rounded-xl shadow-lg px-6 py-5">
            <div class="flex items-center gap-3">
                <div class="h-10 w-10 rounded-full bg-pink-100 flex items-center justify-center">
                    💰
                </div>
                <p class="font-medium text-gray-700">Total Income</p>
            </div>

            <h2 class="text-3xl font-bold mt-4">₱149,283.00</h2>
            <p class="text-xs text-gray-400 mt-2">In this month</p>
        </div>

        <!-- Total Expenses -->
        <div class="bg-white rounded-xl shadow-lg px-6 py-5">
            <div class="flex items-center gap-3">
                <div class="h-10 w-10 rounded-full bg-pink-100 flex items-center justify-center">
                    🧾
                </div>
                <p class="font-medium text-gray-700">Total Expenses</p>
            </div>

            <h2 class="text-3xl font-bold mt-4">₱123,490</h2>
            <p class="text-xs text-gray-400 mt-2">In this month</p>
        </div>

        <!-- Net Profit -->
        <div class="bg-white rounded-xl shadow-lg px-6 py-5">
            <div class="flex items-center gap-3">
                <div class="h-10 w-10 rounded-full bg-pink-100 flex items-center justify-center">
                    📈
                </div>
                <p class="font-medium text-gray-700">Net Profit</p>
            </div>

            <h2 class="text-3xl font-bold mt-4">₱100,000</h2>
            <p class="text-xs text-gray-400 mt-2">In this month</p>
        </div>

        <!-- Net Profit % -->
        <div class="bg-white rounded-xl shadow-lg px-6 py-5">
            <div class="flex items-center gap-3">
                <div class="h-10 w-10 rounded-full bg-pink-100 flex items-center justify-center">
                    🏦
                </div>
                <p class="font-medium text-gray-700">Net Profit</p>
            </div>

            <h2 class="text-3xl font-bold mt-4">₱100,000</h2>
            <p class="text-xs text-gray-400 mt-2">In this month</p>
        </div>

    </div>



    <!-- Charts -->

        <!-- Charts -->
        <!-- Charts (corrected layout: 2 charts side by side above table) -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-10">

            <!-- Bar Chart -->
            <div class="bg-white shadow-lg rounded-2xl p-6 flex flex-col"
                 style="height: 380px;">

                <div class="flex justify-between items-center mb-3">
                    <p class="font-semibold text-sm">Revenue vs Expense</p>

                    @* <select id="chartFilter" *@
                    @*         class="text-sm border border-gray-300 rounded-lg px-3 py-1 focus:outline-none cursor-pointer"> *@
                    @*     <option value="Weekly" selected>Weekly</option> *@
                    @*     <option value="Monthly">Monthly</option> *@
                    @* </select> *@
                </div>

                <canvas id="financeChart" style="height: 300px;"></canvas>
            </div>

            <!-- Doughnut Chart -->
            <div class="bg-white shadow-lg rounded-2xl p-6 flex flex-col"
                 style="height: 380px;">

                <p class="font-semibold text-sm mb-3">Expense Breakdown</p>

                <div class="flex justify-center items-center flex-1">
                    <canvas id="expenseBreakdown" style="height: 290px;"></canvas>
                </div>
            </div>

        </div>


    <!-- Finance Overview Table -->
