@{
    ViewData["Title"] = "Dashboard";
}

<!-- Tailwind CSS -->
<script src="https://cdn.tailwindcss.com"></script>

<div class="p-8 bg-gray-50 min-h-screen">
    <!-- Welcome Header -->
    <h1 class="text-3xl font-bold text-gray-800 mb-6">
        Welcome to the Dashboard, @ViewBag.UserName
    </h1>

    <!-- Metric Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white p-5 rounded-2xl shadow-sm border border-gray-100">
            <p class="text-gray-500 text-sm mb-1">Revenue</p>
            <h2 class="text-2xl font-semibold text-emerald-700">
                ₱@ViewBag.Revenue.ToString("N2")
            </h2>
        </div>

        <div class="bg-white p-5 rounded-2xl shadow-sm border border-gray-100">
            <p class="text-gray-500 text-sm mb-1">Expense</p>
            <h2 class="text-2xl font-semibold text-rose-600">
                ₱@ViewBag.Expense.ToString("N2")
            </h2>
        </div>

        <div class="bg-white p-5 rounded-2xl shadow-sm border border-gray-100">
            <p class="text-gray-500 text-sm mb-1">Sales</p>
            <h2 class="text-2xl font-semibold text-lime-600">
                @ViewBag.Sales
            </h2>
        </div>
    </div>

    <!-- Reports Card -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 mb-10 hover:shadow-md transition">
        <div class="flex items-center justify-between">
            <div>
                <h2 class="text-lg font-semibold text-gray-800">View Reports</h2>
                <p class="text-gray-500 text-sm">See detailed financial and sales reports</p>
            </div>
            <a href= @Url.Action("Reports","Sales_Finance")
               class="px-5 py-2 bg-pink-500 text-white font-medium rounded-xl hover:bg-pink-600 transition">
                Go
            </a>
        </div>
    </div>

    <!-- History Section -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">Recent Activity</h2>
        <div class="divide-y divide-gray-100">
            @if (ViewBag.ActionLogs != null && ((IEnumerable<dynamic>)ViewBag.ActionLogs).Any())
            {
                foreach (var log in (IEnumerable<dynamic>)ViewBag.ActionLogs)
                {
                    <div class="py-3">
                        <p class="text-gray-700 text-sm">
                            <span class="font-semibold text-pink-600">@log.UserName</span>
                            @log.Action.ToLower()d
                            <span class="font-semibold">@log.Entity</span> —
                            @log.Description
                        </p>
                        <p class="text-xs text-gray-400">@log.TimeStamp.ToLocalTime()</p>
                    </div>
                }
            }
            else
            {
                <p class="text-gray-500 text-sm italic">No recent activity yet.</p>
            }
        </div>
    </div>

</div>
