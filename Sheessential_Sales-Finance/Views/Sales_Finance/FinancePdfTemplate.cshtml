@model FinancePdfPayload
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 12px;
            color: #3a3a3a;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
        }

        .logo img {
            height: 45px;
        }

        .meta {
            text-align: right;
            font-size: 11px;
        }

        .divider {
            border-top: 1px solid #ccc;
            margin: 8px 0 25px 0;
        }

        .title {
            font-size: 22px;
            font-weight: bold;
            text-align: center;
        }

        .subtitle {
            font-size: 13px;
            text-align: center;
            margin-bottom: 28px;
        }

        /* Summary Box */
        .summary-container {
            width: 190px;
            border: 1px solid #d2d2d2;
            padding: 0;
            font-size: 12px;
        }

            .summary-container table {
                width: 100%;
                border-collapse: collapse;
            }

            .summary-container td {
                padding: 6px 10px;
                border-bottom: 1px solid #d2d2d2;
            }

            .summary-container tr:last-child td {
                border-bottom: none;
            }

        .section-title {
            font-weight: bold;
            margin-top: 25px;
            margin-bottom: 8px;
            font-size: 13px;
        }

        /* Charts */
        .chart-title {
            font-weight: bold;
            margin: 3px 0 8px 0;
            font-size: 12px;
        }

        .chart-container {
            margin-top: 8px;
        }

        /* Table */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 6px;
        }

        thead {
            background-color: #2D6CDF;
            color: white;
            font-weight: bold;
            font-size: 11px;
        }

        th, td {
            padding: 8px 10px;
        }

        tbody tr:nth-child(even) {
            background: #f5f5f5;
        }

        tbody td {
            font-size: 11px;
        }

        .remarks {
            margin-top: 35px;
            font-size: 10px;
        }

    </style>
</head>
<body>

    <!-- HEADER -->
    <div class="header">
        <div class="logo">
            <img src="@Model.LogoBase64" style="height:150px;" />
        </div>

        <div class="meta">
            Generated By: @Model.GeneratedBy <br />
            Date Generated: @DateTime.Now.ToString("MM-dd-yyyy")
        </div>
    </div>

    <div class="divider"></div>

    <!-- TITLE -->
    <h1 class="title">FINANCIAL SUMMARY REPORT</h1>
    <p class="subtitle">
        Report Period: @Model.StartDate – @Model.EndDate
    </p>

    <!-- SUMMARY BOX -->
    <div class="summary-container">
        <table>
            <tr>
                <td><strong>Total Income:</strong></td>
                <td>@Model.Summary.Income</td>
            </tr>
            <tr>
                <td><strong>Total Expenses:</strong></td>
                <td>@Model.Summary.Expenses</td>
            </tr>
            <tr>
                <td><strong>Net Profit:</strong></td>
                <td>@Model.Summary.Profit</td>
            </tr>
        </table>
    </div>


    <!-- CHARTS -->
    <div class="section-title">Revenue vs Expense Trend</div>
    <div class="chart-title">Revenue vs Expense</div>

    <div class="chart-container">
        <img src="@Model.BarChart" style="width: 80%; height: auto;" />
    </div>

    <!-- TABLE -->
    <div class="section-title">Detailed Transaction</div>
    <table>
        <thead>
            <tr>
                <th>Reference No.</th>
                <th>Date</th>
                <th>Type</th>
                <th>Category</th>
                <th>Department</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in Model.TableRows)
            {
                <tr>
                    <td>@row.Reference</td>
                    <td>@row.Date</td>
                    <td>@row.Type</td>
                    <td>@row.Category</td>
                    <td>@row.Department</td>
                    <td>@row.Amount</td>
                </tr>
            }
        </tbody>
    </table>


    <!-- FOOTER REMARKS -->
    <div class="remarks">
        Remarks:<br /><br />
        This report is for internal use and reference only.
    </div>

</body>
</html>
