@{
    ViewData["Title"] = "Reports";
}

<div class="px-12 py-10">

    <h2 class="text-lg font-semibold text-gray-700 mb-6">Reports</h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">

        <!-- Sales Report Card -->
        <div class="w-[300px] h-[180px] bg-white border rounded-xl shadow-md hover:shadow-lg transition-all duration-200 cursor-pointer">
            <div class="flex justify-center items-center h-[75%]">
                <span class="text-gray-800 font-semibold text-lg">Sales Report</span>
            </div>

            <a href="/Sales_Finance/Report_Sales"
               class="bg-gray-100 text-gray-600 text-sm py-3 flex justify-center items-center gap-2 font-medium border-t">
                View report <i class="fa-solid fa-arrow-right text-xs"></i>
            </a>
        </div>

        <!-- Finance Report Card -->
        <div class="w-[300px] h-[180px] bg-white border rounded-xl shadow-md hover:shadow-lg transition-all duration-200 cursor-pointer">
            <div class="flex justify-center items-center h-[75%]">
                <span class="text-gray-800 font-semibold text-lg">Finance Report</span>
            </div>

            <a href="/Sales_Finance/Reports"
               class="bg-gray-100 text-gray-600 text-sm py-3 flex justify-center items-center gap-2 font-medium border-t">
                View report <i class="fa-solid fa-arrow-right text-xs"></i>
            </a>
        </div>

    </div>
</div>
