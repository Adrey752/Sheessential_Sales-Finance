@{
    ViewData["Title"] = "Reports";
}

<div class="px-10 py-10 flex flex-col items-center">

    <!-- Page Title -->
    <h2 class="text-3xl font-semibold text-gray-900 mb-10 tracking-tight">
        Reports
    </h2>

    <!-- Centered Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 justify-items-center">

        <!-- Sales Report Card -->
        <a href="/Sales_Finance/SalesReport"
           class="group bg-white rounded-2xl shadow-md border border-gray-200 hover:shadow-[0_8px_25px_rgba(0,0,0,0.08)] transition-all duration-300 w-[340px] h-[220px] flex flex-col">

            <div class="flex flex-col items-center justify-center flex-grow px-6">
                <div class="w-14 h-14 bg-indigo-100 text-indigo-600 rounded-xl flex justify-center items-center text-2xl group-hover:bg-indigo-600 group-hover:text-white transition-all">
                    <i class="fa-solid fa-chart-line"></i>
                </div>
                <span class="font-semibold text-gray-800 text-xl mt-4">Sales Report</span>
            </div>

            <div class="py-4 bg-gray-50 rounded-b-2xl flex items-center justify-center text-gray-600 text-sm font-medium gap-2 group-hover:text-indigo-600 transition-all">
                View Report
                <i class="fa-solid fa-arrow-right text-xs"></i>
            </div>
        </a>


        <!-- Finance Report Card -->
        <a href="/Sales_Finance/FinanceReport"
           class="group bg-white rounded-2xl shadow-md border border-gray-200 hover:shadow-[0_8px_25px_rgba(0,0,0,0.08)] transition-all duration-300 w-[340px] h-[220px] flex flex-col">

            <div class="flex flex-col items-center justify-center flex-grow px-6">
                <div class="w-14 h-14 bg-emerald-100 text-emerald-600 rounded-xl flex justify-center items-center text-2xl group-hover:bg-emerald-600 group-hover:text-white transition-all">
                    <i class="fa-solid fa-coins"></i>
                </div>
                <span class="font-semibold text-gray-800 text-xl mt-4">Finance Report</span>
            </div>

            <div class="py-4 bg-gray-50 rounded-b-2xl flex items-center justify-center text-gray-600 text-sm font-medium gap-2 group-hover:text-emerald-600 transition-all">
                View Report
                <i class="fa-solid fa-arrow-right text-xs"></i>
            </div>
        </a>

    </div>
</div>
