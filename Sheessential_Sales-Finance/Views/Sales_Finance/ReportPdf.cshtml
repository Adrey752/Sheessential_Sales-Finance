@model Sheessential_Sales_Finance.Models.ChartPayload
<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            color: #222;
        }

        .summary {
            display: flex;
            justify-content: space-around;
            margin-bottom: 20px;
        }

        .chart {
            text-align: center;
            margin-bottom: 20px;
        }

        img.chart-img {
            width: 100%;
            max-width: 560px;
            border: 1px solid #eee;
        }

        h2, h3 {
            margin: 0 0 8px 0;
        }
    </style>
</head>
<body>
    <h2 style="text-align:center;">Dashboard Report</h2>
    <div style="text-align:center; font-size:12px; margin-bottom:8px;">Generated: @Model.GeneratedAt</div>

    <div class="summary">
        <div><strong>Total Revenue</strong><div>₱ @Model.Revenue</div></div>
        <div><strong>Total Expense</strong><div>₱ @Model.Expense</div></div>
        <div><strong>Transactions</strong><div>@Model.TotalTransactions</div></div>
    </div>

    <hr />

    <div class="chart">
        <h3>Sales Report</h3>
        <img class="chart-img" src="@Model.SalesImage" />
    </div>

    <div class="chart">
        <h3>Expense Breakdown</h3>
        <img class="chart-img" src="@Model.ExpenseImage" />
    </div>

    <div class="chart">
        <h3>Revenue vs Expense</h3>
        <img class="chart-img" src="@Model.CashFlowImage" />
    </div>
</body>
</html>
