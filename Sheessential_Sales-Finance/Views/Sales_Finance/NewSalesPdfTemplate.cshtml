@model SalesPdfload
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Sales Summary Report</title>
    <style>
        /* Base styles for the PDF */
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            font-size: 10pt;
            color: #333;
        }

        .page-container {
            width: 100%;
            margin: 0 auto;
        }

        h1 {
            text-align: center;
            font-size: 20pt;
            color: #000;
            margin-bottom: 0;
        }

        h3 {
            font-size: 14pt;
            color: #333;
            border-bottom: 1px solid #eee;
            padding-bottom: 5px;
            margin-top: 25px;
        }

        /* Header */
        .header-table {
            width: 100%;
            border-bottom: 2px solid #eee;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

            .header-table td {
                vertical-align: top;
            }

            .header-table img {
                max-width: 140px;
                height: auto;
            }

        .header-info {
            text-align: right;
            font-size: 9pt;
            color: #555;
        }

        /* Summary */
        .report-period {
            text-align: center;
            font-size: 11pt;
            color: #555;
            margin-top: 0;
            margin-bottom: 20px;
        }

        .summary-box {
            background-color: #f9f9f9;
            border: 1px solid #eee;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

            .summary-box p {
                margin: 0 0 8px 0;
                font-size: 11pt;
            }

            .summary-box strong {
                color: #000;
                min-width: 180px;
                display: inline-block;
            }

        /* Charts */
        .chart-container {
            width: 100%;
            display: table;
            margin-top: 20px;
        }

        .chart-cell {
            display: table-cell;
            width: 50%;
            padding: 10px;
        }

            .chart-cell img {
                max-width: 100%;
                height: auto;
                border: 1px solid #eee;
            }

            .chart-cell h3 {
                margin-top: 0;
            }

        /* Table */
        .sales-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

            .sales-table th, .sales-table td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
                font-size: 9pt;
            }

            .sales-table th {
                background-color: #0d6efd; /* A nice blue */
                color: white;
                font-weight: bold;
            }

            .sales-table tbody tr:nth-child(even) {
                background-color: #f9f9f9;
            }

        /* Footer */
        .remarks {
            font-style: italic;
            color: #777;
            font-size: 9pt;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="page-container">

        <table class="header-table">
            <tr>
                <td><img src="@Model.LogoBase64" alt="Logo" /></td>
                <td class="header-info">
                    <strong>Generated by:</strong> Admin<br />
                    <strong>Date Generated:</strong> @Model.DateGenerated
                </td>
            </tr>
        </table>

        <h1>SALES SUMMARY REPORT</h1>
        <p class="report-period">Report Period: @Model.ReportPeriod</p>

        <div class="summary-box">
            <p><strong style="color: #A36A66;">Total Sales:</strong> @Model.Summary.TotalSales.ToString("C", new System.Globalization.CultureInfo("en-PH"))</p>
            <p><strong style="color: #A36A66;">Total Orders:</strong> @Model.Summary.TotalOrders</p>
            <p><strong style="color: #A36A66;">Active Customers:</strong> @Model.Summary.ActiveCustomers</p>
            <p><strong style="color: #A36A66;">Top Performing Product:</strong> @Model.Summary.TopPerformingProduct</p>
        </div>

        <div class="chart-container">
            <div class="chart-cell">
                <h3>Sales Trend</h3>
                <img src="@Model.SalesTrendChartBase64" alt="Sales Trend Chart" />
            </div>
            <div class="chart-cell">
                <h3>Top Products</h3>
                <img src="@Model.TopProductsChartBase64" alt="Top Products Chart" />
            </div>
        </div>

        <h3>Product Sales Report</h3>
        <table class="sales-table">
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Unit Price</th>
                    <th>Quantity</th>
                    <th>Total Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.TopProductsTable)
                {
                    <tr>
                        <td>@item.ProductId</td>
                        <td>@item.ProductName</td>
                        <td>@item.Category</td>
                        <td>@item.UnitPrice.ToString("C", new System.Globalization.CultureInfo("en-PH"))</td>
                        <td>@item.Quantity</td>
                        <td>@item.TotalAmount.ToString("C", new System.Globalization.CultureInfo("en-PH"))</td>
                    </tr>
                }
            </tbody>
        </table>

        <p class="remarks">
            Remarks: This report is for internal and analytical use only.
        </p>

    </div>
</body>
</html>