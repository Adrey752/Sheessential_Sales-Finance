@model IEnumerable<Sheessential_Sales_Finance.Models.User>
@{
    ViewData["Title"] = "Customer Dashboard";
    var selectedUser = ViewBag.SelectedUser as Sheessential_Sales_Finance.Models.User;
}

<link href="~/css/output.css" rel="stylesheet" />

<div class="p-10 bg-gray-50 min-h-screen">
    <!-- Summary Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-10">
        <div class="bg-gray-100 rounded-2xl shadow p-6 text-center">
            <p class="text-gray-500">Total Customer</p>
            <h1 class="text-2xl font-bold">@ViewBag.TotalCustomers</h1>
        </div>
        <div class="bg-gray-100 rounded-2xl shadow p-6 text-center">
            <p class="text-gray-500">Active Customer</p>
            <h1 class="text-2xl font-bold">@ViewBag.ActiveCustomers</h1>
        </div>
        <div class="bg-gray-100 rounded-2xl shadow p-6 text-center">
            <p class="text-gray-500">Inactive Customer</p>
            <h1 class="text-2xl font-bold">@ViewBag.InactiveCustomers</h1>
        </div>
    </div>

    <!-- Customer Table -->
    <div class="bg-white p-8 rounded-2xl shadow">
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-lg font-semibold">All Customers</h2>
            <form asp-action="Customers" method="get" class="flex gap-2">
                <input type="text" name="searchQuery" value="@Context.Request.Query["searchQuery"]"
                       placeholder="Search"
                       class="border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring focus:ring-gray-200" />
                <button type="submit" class="bg-gray-800 text-white px-4 py-2 rounded-lg hover:bg-gray-700">
                    Search
                </button>
            </form>
        </div>

        <table class="w-full text-sm text-left text-gray-700">
            <thead class="text-xs uppercase bg-gray-100">
                <tr>
                    <th class="px-4 py-3">Customer ID</th>
                    <th class="px-4 py-3">Customer Name</th>
                    <th class="px-4 py-3">Phone Number</th>
                    <th class="px-4 py-3">Email</th>
                    <th class="px-4 py-3">City</th>
                    <th class="px-4 py-3">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr class="border-b hover:bg-gray-50 cursor-pointer"
                        onclick="location.href='@Url.Action("Customers", new { selectedId = user.Id })'">
                        <td class="px-4 py-3 text-gray-500">@user.Id</td>
                        <td class="px-4 py-3">@user.FullName</td>
                        <td class="px-4 py-3">@user.Phone</td>
                        <td class="px-4 py-3">@user.Email</td>
                        <td class="px-4 py-3">@user.Address?.City</td>
                        <td class="px-4 py-3">
                            @if (user.Status.ToLower() == "active")
                            {
                                <span class="bg-green-100 text-green-700 px-3 py-1 rounded-lg text-xs font-semibold">Active</span>
                            }
                            else
                            {
                                <span class="bg-red-100 text-red-700 px-3 py-1 rounded-lg text-xs font-semibold">Inactive</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-gray-400 text-sm mt-4">
            Showing @Model.Count() users
        </div>
    </div>

    <!-- Modal Section -->
    @if (ViewBag.SelectedUser != null)
    {
        <div class="fixed inset-0 bg-black/40 flex items-center justify-center z-50">
            <div class="bg-white rounded-2xl shadow-xl w-[480px] p-6 relative">
                <a href="@Url.Action("Customers", "Sales_Finance")"
                   class="absolute top-4 right-4 text-gray-500 hover:text-gray-700 text-lg font-bold">&times;</a>

                <h2 class="text-xl font-semibold text-gray-800">Customer Preview</h2>
                <p class="text-gray-600 text-sm mb-6">Customer ID: @ViewBag.SelectedUser.Id</p>

                <div class="grid grid-cols-2 gap-4 mb-4">
                    <div>
                        <label class="block text-sm text-gray-600 mb-1">First Name</label>
                        <input type="text" value="@ViewBag.SelectedUser.FirstName" class="w-full border rounded-lg px-3 py-2 text-gray-700" readonly />
                    </div>
                    <div>
                        <label class="block text-sm text-gray-600 mb-1">Last Name</label>
                        <input type="text" value="@ViewBag.SelectedUser.LastName" class="w-full border rounded-lg px-3 py-2 text-gray-700" readonly />
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-4 mb-4">
                    <div>
                        <label class="block text-sm text-gray-600 mb-1">Email</label>
                        <input type="text" value="@ViewBag.SelectedUser.Email" class="w-full border rounded-lg px-3 py-2 text-gray-700" readonly />
                    </div>
                    <div>
                        <label class="block text-sm text-gray-600 mb-1">Phone No.</label>
                        <input type="text" value="@ViewBag.SelectedUser.Phone" class="w-full border rounded-lg px-3 py-2 text-gray-700" readonly />
                    </div>
                </div>

                <div>
                    <label class="block text-sm text-gray-600 mb-1">Address</label>
                    <input type="text" value="@ViewBag.SelectedUser.Address" class="w-full border rounded-lg px-3 py-2 text-gray-700" readonly />
                </div>
            </div>
        </div>
    }

</div>
