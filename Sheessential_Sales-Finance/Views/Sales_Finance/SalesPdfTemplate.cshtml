@model SalesPdfPayload
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 12px;
            color: #3a3a3a;
        }

        /* HEADER */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }

        .logo {
            height: 65px;
        }

        .header-info {
            text-align: right;
            display: flex;
            flex-direction: column;
        }

            .header-info p {
                margin: 2px 0;
                font-size: 11.5px;
            }

        /* TITLE */
        .report-title {
            text-align: center;
            margin-top: 8px;
        }

            .report-title h2 {
                margin: 0;
                font-size: 18px;
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

            .report-title p {
                margin: 3px 0;
                font-size: 12px;
                color: #666;
            }

        /* SUMMARY */
        .summary {
            margin-top: 15px;
            border: 1px solid #ddd;
            border-radius: 6px;
            padding: 8px 12px;
            width: fit-content;
        }

            .summary table {
                border-collapse: collapse;
                font-size: 12px;
            }

            .summary td {
                padding: 4px 10px;
            }

        /* TABLE SECTION */
        .sales-table {
            margin-top: 28px;
        }

            .sales-table h3 {
                margin-bottom: 8px;
            }

            .sales-table table {
                width: 100%;
                border-collapse: collapse;
                font-size: 11.5px;
            }

            .sales-table th {
                background-color: #2D6CDF;
                color: white;
                padding: 8px;
                text-align: left;
            }

            .sales-table td {
                padding: 6px 8px;
                border-bottom: 1px solid #ddd;
            }

        .remarks {
            margin-top: 15px;
            font-size: 11px;
            color: #555;
        }
    </style>
</head>
<body>

    <!-- Header -->
    <div class="header">
        <img src="@Model.LogoBase64" alt="Logo" class="logo" />

        <div class="header-info">
            <p><strong>Generated by:</strong> @Model.GeneratedBy</p>
            <p><strong>Date Generated:</strong> @Model.DateGenerated</p>
        </div>
    </div>

    <!-- Title -->
    <div class="report-title">
        <h2>SALES SUMMARY REPORT</h2>
        <p><strong>Report Period:</strong> @Model.PeriodText</p>
    </div>

    <!-- Summary Section -->
    <div class="summary">
        <table>
            <tr><td><strong>Total Sales:</strong></td><td>@Model.Summary.TotalSales</td></tr>
            <tr><td><strong>Total Orders:</strong></td><td>@Model.Summary.TotalOrders</td></tr>
            <tr><td><strong>Active Customers:</strong></td><td>@Model.Summary.ActiveCustomers</td></tr>
            <tr><td><strong>Top Performing Product:</strong></td><td>@Model.Summary.TopProduct</td></tr>
        </table>
    </div>

    <!-- CHARTS (Side-by-side using TABLE FOR PDF COMPATIBILITY) -->
    <table style="width:100%; margin-top:25px; table-layout: fixed;">
        <tr>
            <td style="text-align:center; vertical-align:top; width:50%;">
                <h3>Sales Trend</h3>
                <img src="@Model.RevenueChart"
                     alt="Sales Trend Chart"
                     style="width:95%; max-width:330px; border:1px solid #ddd; border-radius:8px;" />
            </td>

            <td style="text-align:center; vertical-align:top; width:50%;">
                <h3>Top Products</h3>
                <img src="@Model.TopProductsChart"
                     alt="Top Products Chart"
                     style="width:95%; max-width:330px; border:1px solid #ddd; border-radius:8px;" />
            </td>
        </tr>
    </table>

    <!-- Table Section -->
    <div class="sales-table">
        <h3>Sales Transactions</h3>
        <img src="@Model.TableImage"
             alt="Sales Table"
             style="width:100%; border-radius:8px; border:1px solid #ddd;" />
    </div>

    <!-- Remarks -->
    <div class="remarks">
        <p><strong>Remarks:</strong></p>
        <p>This report is for internal and analytical use only.</p>
    </div>

</body>
</html>
