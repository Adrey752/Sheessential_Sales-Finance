<script>
    let currentExpenseId = null;
    let currentExpenseAmount = null;
    const AVAILABLE_BALANCE = 50000; // This should be dynamic from backend

    // Helper function to format currency
    function formatCurrency(amount) {
        return '₱' + parseFloat(amount).toLocaleString('en-PH', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
    }

    // Helper function to calculate balance after approval
    function calculateBalanceAfter(expenseAmount) {
        const amount = parseFloat(expenseAmount.replace(/,/g, ''));
        return AVAILABLE_BALANCE - amount;
    }

    // Check if balance is sufficient
    function checkBalance(expenseAmount) {
        const amount = parseFloat(expenseAmount.replace(/,/g, ''));
        return AVAILABLE_BALANCE >= amount;
    }

    // Show low balance alert
    function checkLowBalance() {
        const alertDiv = document.getElementById('balanceAlert');
        if (AVAILABLE_BALANCE < 20000) {
            alertDiv.classList.remove('hidden');
        }
    }

    // Initialize page
    document.addEventListener('DOMContentLoaded', function() {
        checkLowBalance();
    });

    // Add Expense Modal - Show
    document.getElementById("openModalBtn").addEventListener("click", function () {
        document.getElementById("expenseModal").classList.remove("hidden");
        document.getElementById("expenseModal").classList.add("flex");
    });

    // Add Expense Modal - Close
    document.getElementById("closeModalBtn").addEventListener("click", function () {
        document.getElementById("expenseModal").classList.add("hidden");
        document.getElementById("expenseModal").classList.remove("flex");
    });

    // Preview Modal - Open and populate with expense data
    document.querySelectorAll(".view-details-btn").forEach(button => {
        button.addEventListener("click", function () {
            // Get data from button attributes
            const expenseId = this.getAttribute("data-expense-id");
            const requester = this.getAttribute("data-requester");
            const department = this.getAttribute("data-department");
            const type = this.getAttribute("data-type");
            const amount = this.getAttribute("data-amount");
            const description = this.getAttribute("data-description");
            const notes = this.getAttribute("data-notes") || "No additional notes provided";
            const status = this.getAttribute("data-status");
            const id = this.getAttribute("data-id");

            // Store for later use
            currentExpenseId = id;
            currentExpenseAmount = amount;

            // Calculate balance after approval
            const balanceAfter = calculateBalanceAfter(amount);

            // Populate preview modal
            document.getElementById("preview-expense-id").textContent = expenseId;
            document.getElementById("preview-requester").textContent = requester;
            document.getElementById("preview-requester-initial").textContent = requester.substring(0, 1).toUpperCase();
            document.getElementById("preview-department").textContent = department;
            document.getElementById("preview-type").textContent = type;
            document.getElementById("preview-amount").textContent = "₱" + amount;
            document.getElementById("preview-description").textContent = description;
            document.getElementById("preview-notes").textContent = notes;
            document.getElementById("preview-status").textContent = status;
            document.getElementById("balance-after-approval").textContent = formatCurrency(balanceAfter);

            // Show preview modal
            document.getElementById("previewModal").classList.remove("hidden");
            document.getElementById("previewModal").classList.add("flex");
        });
    });

    // Preview Modal - Close
    document.getElementById("closePreviewBtn").addEventListener("click", function () {
        document.getElementById("previewModal").classList.add("hidden");
        document.getElementById("previewModal").classList.remove("flex");
    });

    document.getElementById("cancelPreviewBtn").addEventListener("click", function () {
        document.getElementById("previewModal").classList.add("hidden");
        document.getElementById("previewModal").classList.remove("flex");
    });

    // Approve Button - Show Transfer Fund Modal
    document.getElementById("approveBtn").addEventListener("click", function () {
        // Close preview modal
        document.getElementById("previewModal").classList.add("hidden");
        document.getElementById("previewModal").classList.remove("flex");

        // Set expense ID and amount
        document.getElementById("approve-expense-id").value = currentExpenseId;
        document.getElementById("transfer-amount-display").value = "₱" + currentExpenseAmount;
        document.getElementById("transfer-amount-display-main").textContent = "₱" + currentExpenseAmount;

        // Calculate balance after transfer
        const balanceAfter = calculateBalanceAfter(currentExpenseAmount);
        document.getElementById("balance-after-transfer").textContent = formatCurrency(balanceAfter);

        // Check if balance is sufficient
        const isSufficient = checkBalance(currentExpenseAmount);
        const warningDiv = document.getElementById("insufficientBalanceWarning");
        const submitBtn = document.getElementById("confirmApproveBtn");

        if (!isSufficient) {
            warningDiv.classList.remove("hidden");
            submitBtn.disabled = true;
            submitBtn.classList.add("opacity-50", "cursor-not-allowed");
            // Update balance after color to red
            document.getElementById("balance-after-transfer").classList.add("text-red-600");
            document.getElementById("balance-after-transfer").classList.remove("text-green-900");
        } else {
            warningDiv.classList.add("hidden");
            submitBtn.disabled = false;
            submitBtn.classList.remove("opacity-50", "cursor-not-allowed");
            // Update balance after color
            if (balanceAfter < 20000) {
                document.getElementById("balance-after-transfer").classList.add("text-yellow-600");
                document.getElementById("balance-after-transfer").classList.remove("text-green-900");
            } else {
                document.getElementById("balance-after-transfer").classList.add("text-green-900");
                document.getElementById("balance-after-transfer").classList.remove("text-yellow-600");
            }
        }

        // Show transfer fund modal
        document.getElementById("transferFundModal").classList.remove("hidden");
        document.getElementById("transferFundModal").classList.add("flex");
    });

    // Transfer Fund Modal - Cancel
    document.getElementById("cancelTransferBtn").addEventListener("click", function () {
        document.getElementById("transferFundModal").classList.add("hidden");
        document.getElementById("transferFundModal").classList.remove("flex");
        
        // Clear form
        document.getElementById("approveForm").reset();
    });

    // Decline Button - Show Decline Reason Modal
    document.getElementById("declineBtn").addEventListener("click", function () {
        // Close preview modal
        document.getElementById("previewModal").classList.add("hidden");
        document.getElementById("previewModal").classList.remove("flex");

        // Set expense ID
        document.getElementById("decline-expense-id").value = currentExpenseId;

        // Show decline reason modal
        document.getElementById("declineReasonModal").classList.remove("hidden");
        document.getElementById("declineReasonModal").classList.add("flex");
    });

    // Decline Reason Modal - Cancel
    document.getElementById("cancelDeclineBtn").addEventListener("click", function () {
        document.getElementById("declineReasonModal").classList.add("hidden");
        document.getElementById("declineReasonModal").classList.remove("flex");
        
        // Clear form
        document.getElementById("declineForm").reset();
    });
</script>