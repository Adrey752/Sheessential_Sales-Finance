@model IEnumerable<Sheessential_Sales_Finance.Models.Expenses>

@{
    ViewData["Title"] = "Expense Management";
}

<link href="~/css/output.css" rel="stylesheet" />

<div class="p-10 bg-gray-50 min-h-screen">
    <!-- HEADER -->
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Expense Requests</h1>
        <button id="openModalBtn" class="bg-blue-600 text-white px-5 py-2 rounded-lg hover:bg-blue-700 transition">
            + New Expense
        </button>
    </div>

    <!-- SUMMARY CARDS -->
    <div class="grid grid-cols-4 gap-6 mb-10">
        <div class="bg-white p-6 rounded-2xl shadow-md">
            <p class="text-gray-500">Total Expenses</p>
            <h2 class="text-2xl font-bold text-gray-800">₱@ViewBag.TotalExpenses.ToString("N2")</h2>
        </div>
        <div class="bg-white p-6 rounded-2xl shadow-md">
            <p class="text-gray-500">Pending Requests</p>
            <h2 class="text-2xl font-bold text-yellow-500">₱@ViewBag.PendingTotal.ToString("N2")</h2>
        </div>
        <div class="bg-white p-6 rounded-2xl shadow-md">
            <p class="text-gray-500">Approved Expenses</p>
            <h2 class="text-2xl font-bold text-green-600">₱@ViewBag.ApprovedTotal.ToString("N2")</h2>
        </div>
        <div class="bg-white p-6 rounded-2xl shadow-md">
            <p class="text-gray-500">Declined Requests</p>
            <h2 class="text-2xl font-bold text-red-600">₱@ViewBag.DeclinedTotal.ToString("N2")</h2>
        </div>
    </div>


    <!-- EXPENSE REQUESTS TABLE -->
    <div class="bg-white p-6 rounded-2xl shadow-md">
        <h2 class="text-2xl font-bold text-gray-800 mb-4">Company Expense Requests</h2>

        <table class="min-w-full border border-gray-200 rounded-lg">
            <thead class="bg-gray-100">
                <tr>
                    <th class="p-3 text-left">Expense ID</th>
                    <th class="p-3 text-left">Requester</th>
                    <th class="p-3 text-left">Department</th>
                    <th class="p-3 text-left">Type</th>
                    <th class="p-3 text-left">Amount</th>
                    <th class="p-3 text-left">Description</th>
                    <th class="p-3 text-left">Status</th>
                    <th class="p-3 text-left">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var expense in Model)
                    {
                        <tr class="border-t hover:bg-gray-50">
                            <td class="p-3">@expense.ExpenseId</td>
                            <td class="p-3">@expense.RequestedBy</td>
                            <td class="p-3">@expense.Department</td>
                            <td class="p-3">@expense.ExpenseType</td>
                            <td class="p-3">₱@expense.Amount.ToString("N2")</td>
                            <td class="p-3">@expense.Description</td>
                            <td class="p-3">
                                @if (expense.Status == "Pending")
                                {
                                    <span class="text-yellow-600 font-medium">Pending</span>
                                }
                                else if (expense.Status == "Approved")
                                {
                                    <span class="text-green-600 font-medium">Approved</span>
                                }
                                else if (expense.Status == "Declined")
                                {
                                    <span class="text-red-600 font-medium">Declined</span>
                                }
                                else
                                {
                                    <span class="text-gray-600 font-medium">@expense.Status</span>
                                }
                            </td>
                            <td class="p-3">
                                <div class="flex items-center gap-2 justify-center">
                                    @if (expense.Status == "Pending")
                                    {
                                        <form asp-action="ApproveExpense" asp-controller="Sales_Finance" method="post" class="inline">
                                            <input type="hidden" name="id" value="@expense.Id" />
                                            <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 w-24 text-center">
                                                Approve
                                            </button>
                                        </form>
                                        <form asp-action="DeclineExpense" asp-controller="Sales_Finance" method="post" class="inline">
                                            <input type="hidden" name="id" value="@expense.Id" />
                                            <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 w-24 text-center">
                                                Decline
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button class="bg-gray-300 text-gray-700 px-4 py-2 rounded-lg cursor-not-allowed w-24 text-center">
                                            @expense.Status
                                        </button>
                                    }
                                </div>
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-gray-500 p-5">No expense requests found.</td>
                    </tr>
                }
            </tbody>


        </table>
    </div>
</div>


<!-- ADD EXPENSE MODAL -->
<div id="expenseModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white w-full max-w-lg rounded-2xl shadow-lg p-8">
        <h2 class="text-2xl font-bold text-gray-800 mb-4">Add New Expense</h2>

        <form asp-action="AddExpense" asp-controller="Sales_Finance" method="post">
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-gray-600">Department</label>
                    <select name="Department" class="w-full border border-gray-300 rounded-lg p-2">
                        <option value="HR">HR</option>
                        <option value="Accounting">Accounting</option>
                        <option value="Website">Website</option>
                        <option value="Marketing">Marketing</option>
                        <option value="Inventory">Inventory</option>
                    </select>
                </div>
                <div>
                    <label class="block text-gray-600">Expense Type</label>
                    <input name="ExpenseType" class="w-full border border-gray-300 rounded-lg p-2" required />
                </div>
                <div>
                    <label class="block text-gray-600">Requested By</label>
                    <input name="RequestedBy" class="w-full border border-gray-300 rounded-lg p-2" required />
                </div>
                <div>
                    <label class="block text-gray-600">Amount (₱)</label>
                    <input type="number" name="Amount" step="0.01" class="w-full border border-gray-300 rounded-lg p-2" required />
                </div>
                <div class="col-span-2">
                    <label class="block text-gray-600">Description</label>
                    <textarea name="Description" class="w-full border border-gray-300 rounded-lg p-2" rows="2" required></textarea>
                </div>
                <div class="col-span-2">
                    <label class="block text-gray-600">Notes (optional)</label>
                    <textarea name="Notes" class="w-full border border-gray-300 rounded-lg p-2" rows="2"></textarea>
                </div>
            </div>

            <div class="flex justify-end gap-3 mt-6">
                <button type="button" id="closeModalBtn" class="bg-gray-300 text-gray-800 px-4 py-2 rounded-lg hover:bg-gray-400">Cancel</button>
                <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">Submit</button>
            </div>
        </form>
    </div>
</div>

<script>
    // Show modal
    document.getElementById("openModalBtn").addEventListener("click", function () {
        document.getElementById("expenseModal").classList.remove("hidden");
        document.getElementById("expenseModal").classList.add("flex");
    });

    // Close modal
    document.getElementById("closeModalBtn").addEventListener("click", function () {
        document.getElementById("expenseModal").classList.add("hidden");
        document.getElementById("expenseModal").classList.remove("flex");
    });
</script>
