@model Sheessential_Sales_Finance.Models.ExpensesWithBalanceViewModel

@{
    ViewData["Title"] = "Expense Management";
}

<link href="~/css/output.css" rel="stylesheet" />

<div class="p-6 bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen">
    <!-- HEADER -->
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-4xl font-bold text-gray-900 mb-1">Expense Management</h1>
            <p class="text-gray-600">Manage and track company expense requests</p>
        </div>
        <button id="openModalBtn" class="bg-gradient-to-r from-blue-600 to-blue-700 text-white px-6 py-3 rounded-xl hover:from-blue-700 hover:to-blue-800 transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            New Expense Request
        </button>
    </div>

    <!-- SUMMARY CARDS -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6 mb-8">
        <!-- Available Balance Card -->
        <div class="bg-white p-6 rounded-2xl shadow-md hover:shadow-lg transition-shadow border border-gray-100">
            <div class="flex items-center gap-4 mb-2">
                <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center">
                    <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"></path>
                    </svg>
                </div>
                
                <p class="text-blue-500 text-sm font-medium">Available Balance</p>
            </div>

            @if (Model.Balance != null)
            {
                <h3 class="text-3xl font-bold text-gray-900 mt-1">
                    @Model.Balance.CurrentBalance.ToString("C")
                </h3>
                <p class="text-gray-500 text-sm mt-1">All time</p>
            }
            else
            {
                <h3 class="text-3xl font-bold text-gray-900 mt-1">
                    ₱0.00
                </h3>
            }
        </div>

        <div class="bg-white p-6 rounded-2xl shadow-md hover:shadow-lg transition-shadow border border-gray-100">
            <div class="flex items-center gap-2 mb-2">
                <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <p class="text-gray-600 text-sm font-medium">Total Expenses</p>
            </div>
            <h2 class="text-2xl font-bold text-gray-900">₱@ViewBag.TotalExpenses.ToString("N2")</h2>
            <p class="text-gray-500 text-sm mt-1">All time</p>
        </div>

        <div class="bg-white p-6 rounded-2xl shadow-md hover:shadow-lg transition-shadow border border-gray-100">
            <div class="flex items-center gap-2 mb-2">
                <div class="w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <p class="text-gray-600 text-sm font-medium">Pending</p>
            </div>
            <h2 class="text-2xl font-bold text-yellow-600">₱@ViewBag.PendingTotal.ToString("N2")</h2>
            <p class="text-gray-500 text-sm mt-1">Awaiting approval</p>
        </div>

        <div class="bg-white p-6 rounded-2xl shadow-md hover:shadow-lg transition-shadow border border-gray-100">
            <div class="flex items-center gap-2 mb-2">
                <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <p class="text-gray-600 text-sm font-medium">Approved</p>
            </div>
            <h2 class="text-2xl font-bold text-green-600">₱@ViewBag.ApprovedTotal.ToString("N2")</h2>
            <p class="text-gray-500 text-sm mt-1">This month</p>
        </div>

        <div class="bg-white p-6 rounded-2xl shadow-md hover:shadow-lg transition-shadow border border-gray-100">
            <div class="flex items-center gap-2 mb-2">
                <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <p class="text-gray-600 text-sm font-medium">Declined</p>
            </div>
            <h2 class="text-2xl font-bold text-red-600">₱@ViewBag.DeclinedTotal.ToString("N2")</h2>
            <p class="text-gray-500 text-sm mt-1">This month</p>
        </div>
    </div>

    <!-- Balance Alert -->
    <div id="balanceAlert" class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6 rounded-lg shadow-sm hidden">
        <div class="flex items-center">
            <svg class="w-5 h-5 text-yellow-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
            <div>
                <p class="text-yellow-800 font-medium">Low Balance Warning</p>
                <p class="text-yellow-700 text-sm">Available balance is below ₱20,000. Consider adding funds before approving large expenses.</p>
            </div>
        </div>
    </div>

    <!-- EXPENSE REQUESTS TABLE -->
    <div class="bg-white rounded-2xl shadow-md overflow-hidden">
        <div class="p-6 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
            <div class="flex justify-between items-center">
                <div>
                    <h2 class="text-2xl font-bold text-gray-900">Expense Requests</h2>
                    <p class="text-gray-600 text-sm mt-1">Review and manage company expenses</p>
                </div>
                <div class="flex gap-3">
                    <button class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
                        </svg>
                        Filter
                    </button>
                    <button class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                        </svg>
                        Export
                    </button>
                </div>
            </div>
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Expense ID</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Requester</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Department</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Type</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Amount</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Description</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @if (Model != null && Model.Expenses != null && Model.Expenses.Any())
                    {
                        @foreach (var expense in Model.Expenses)
                        {
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="text-sm font-medium text-blue-600">@expense.ExpenseId</span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center text-white text-xs font-medium mr-3">
                                            @expense.RequestedBy.Substring(0, 1).ToUpper()
                                        </div>
                                        <span class="text-sm text-gray-900">@expense.RequestedBy</span>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-3 py-1 inline-flex text-xs leading-5 font-medium rounded-full bg-gray-100 text-gray-800">
                                        @expense.Department
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@expense.ExpenseType</td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="text-sm font-semibold text-gray-900">₱@expense.Amount.ToString("N2")</span>
                                </td>
                                <td class="px-6 py-4 max-w-xs">
                                    <p class="text-sm text-gray-600 truncate">@expense.Description</p>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @if (expense.Status == "Pending")
                                    {
                                        <span class="px-3 py-1 inline-flex items-center text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                            <span class="w-2 h-2 bg-yellow-500 rounded-full mr-2 animate-pulse"></span>
                                            Pending
                                        </span>
                                    }
                                    else if (expense.Status == "Approved")
                                    {
                                        <span class="px-3 py-1 inline-flex items-center text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                            </svg>
                                            Approved
                                        </span>
                                    }
                                    else if (expense.Status == "Declined")
                                    {
                                        <span class="px-3 py-1 inline-flex items-center text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                                            </svg>
                                            Declined
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">@expense.Status</span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @if (expense.Status == "Pending")
                                    {
                                        <button type="button" 
                                                class="view-details-btn px-4 py-2 bg-gradient-to-r from-blue-600 to-blue-700 text-white text-sm font-medium rounded-lg hover:from-blue-700 hover:to-blue-800 transition-all shadow-sm hover:shadow-md transform hover:-translate-y-0.5"
                                                data-id="@expense.Id"
                                                data-expense-id="@expense.ExpenseId"
                                                data-requester="@expense.RequestedBy"
                                                data-department="@expense.Department"
                                                data-type="@expense.ExpenseType"
                                                data-amount="@expense.Amount.ToString("N2")"
                                                data-description="@expense.Description"
                                                data-notes="@expense.Notes"
                                                data-status="@expense.Status">
                                            Review
                                        </button>
                                    }
                                    else
                                    {
                                        <span class="px-4 py-2 bg-gray-100 text-gray-500 text-sm font-medium rounded-lg cursor-not-allowed inline-block">
                                            @expense.Status
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="px-6 py-12 text-center">
                                <div class="flex flex-col items-center">
                                    <svg class="w-16 h-16 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                    </svg>
                                    <p class="text-gray-500 text-lg font-medium">No expense requests found</p>
                                    <p class="text-gray-400 text-sm mt-1">Create a new expense request to get started</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<!-- PREVIEW/DETAILS MODAL -->
<div id="previewModal" class="fixed inset-0 bg-black bg-opacity-60 hidden items-center justify-center z-50 backdrop-blur-sm">
    <div class="bg-white w-full max-w-3xl rounded-3xl shadow-2xl p-8 max-h-[90vh] overflow-y-auto m-4 transform transition-all">
        <div class="flex justify-between items-center mb-6 pb-4 border-b border-gray-200">
            <div class="flex items-center gap-3">
                <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                </div>
                <div>
                    <h2 class="text-2xl font-bold text-gray-900">Expense Request Details</h2>
                    <p class="text-gray-500 text-sm">Review and take action</p>
                </div>
            </div>
            <button id="closePreviewBtn" class="text-gray-400 hover:text-gray-600 transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>

        <div class="space-y-5">
            <!-- Expense ID -->
            <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-5 rounded-xl border border-blue-200">
                <p class="text-sm text-blue-700 font-medium mb-1">Expense ID</p>
                <p class="text-xl font-bold text-blue-900" id="preview-expense-id">EXP-001</p>
            </div>

            <!-- Requester Info -->
            <div class="grid grid-cols-2 gap-4">
                <div class="bg-gray-50 p-5 rounded-xl border border-gray-200">
                    <p class="text-sm text-gray-600 font-medium mb-1">Requested By</p>
                    <div class="flex items-center gap-2">
                        <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center text-white text-xs font-medium">
                            <span id="preview-requester-initial">J</span>
                        </div>
                        <p class="text-lg font-semibold text-gray-900" id="preview-requester">John Doe</p>
                    </div>
                </div>
                <div class="bg-gray-50 p-5 rounded-xl border border-gray-200">
                    <p class="text-sm text-gray-600 font-medium mb-1">Department</p>
                    <p class="text-lg font-semibold text-gray-900" id="preview-department">Marketing</p>
                </div>
            </div>

            <!-- Expense Type & Amount -->
            <div class="grid grid-cols-2 gap-4">
                <div class="bg-gray-50 p-5 rounded-xl border border-gray-200">
                    <p class="text-sm text-gray-600 font-medium mb-1">Expense Type</p>
                    <p class="text-lg font-semibold text-gray-900" id="preview-type">Office Supplies</p>
                </div>
                <div class="bg-gradient-to-br from-green-50 to-emerald-50 p-5 rounded-xl border border-green-200">
                    <p class="text-sm text-green-700 font-medium mb-1">Amount Requested</p>
                    <p class="text-2xl font-bold text-green-700" id="preview-amount">₱5,000.00</p>
                </div>
            </div>

            <!-- Description -->
            <div class="bg-gray-50 p-5 rounded-xl border border-gray-200">
                <p class="text-sm text-gray-600 font-medium mb-2">Description</p>
                <p class="text-gray-900 leading-relaxed" id="preview-description">Purchase of office supplies for Q4</p>
            </div>

            <!-- Notes -->
            <div class="bg-gray-50 p-5 rounded-xl border border-gray-200">
                <p class="text-sm text-gray-600 font-medium mb-2">Additional Notes</p>
                <p class="text-gray-700 leading-relaxed" id="preview-notes">Urgent request for marketing campaign materials</p>
            </div>

            <!-- Status -->
            <div class="bg-yellow-50 p-5 rounded-xl border-l-4 border-yellow-500">
                <div class="flex items-center gap-2 mb-1">
                    <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <p class="text-sm text-yellow-700 font-medium">Current Status</p>
                </div>
                <p class="text-lg font-bold text-yellow-700" id="preview-status">Pending Review</p>
            </div>

            <!-- Balance Check Info -->
            <div id="balanceCheckInfo" class="bg-blue-50 p-5 rounded-xl border border-blue-200">
                <div class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-blue-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div class="flex-1">
                        <p class="text-sm text-blue-800 font-medium mb-2">Balance Information</p>
                        <div class="space-y-1 text-sm text-blue-700">
                            <p>Current Available Balance: <span class="font-semibold">₱50,000.00</span></p>
                            <p>After Approval: <span class="font-semibold" id="balance-after-approval">₱45,000.00</span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex justify-end gap-3 mt-8 pt-6 border-t border-gray-200">
            <button type="button" id="cancelPreviewBtn" class="px-6 py-2.5 bg-gray-100 text-gray-700 rounded-xl hover:bg-gray-200 transition-colors font-medium">
                Cancel
            </button>
            
            <button type="button" id="declineBtn" class="px-6 py-2.5 bg-gradient-to-r from-red-500 to-red-600 text-white rounded-xl hover:from-red-600 hover:to-red-700 transition-all shadow-md hover:shadow-lg transform hover:-translate-y-0.5 font-medium flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                Decline Request
            </button>
            
            <button type="button" id="approveBtn" class="px-6 py-2.5 bg-gradient-to-r from-green-500 to-green-600 text-white rounded-xl hover:from-green-600 hover:to-green-700 transition-all shadow-md hover:shadow-lg transform hover:-translate-y-0.5 font-medium flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Approve & Transfer
            </button>
        </div>
    </div>
</div>


<!-- DECLINE REASON MODAL -->
<div id="declineReasonModal" class="fixed inset-0 bg-black bg-opacity-60 hidden items-center justify-center z-50 backdrop-blur-sm">
    <div class="bg-white w-full max-w-lg rounded-3xl shadow-2xl p-8 m-4 transform transition-all">
        <div class="flex items-center gap-3 mb-6">
            <div class="w-12 h-12 bg-red-100 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
            </div>
            <div>
                <h2 class="text-2xl font-bold text-gray-900">Decline Request</h2>
                <p class="text-gray-600 text-sm">Provide a reason for declining</p>
            </div>
        </div>

        <form id="declineForm" asp-action="DeclineExpense" asp-controller="Sales_Finance" method="post">
            <input type="hidden" name="id" id="decline-expense-id" value="" />
            
            <div class="mb-6">
                <label class="block text-gray-700 font-medium mb-2">
                    Reason for Decline <span class="text-red-500">*</span>
